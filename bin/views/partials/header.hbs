}

const makerealPost1 = async (route, body) => {
    let request = {
      method: 'POST',
      headers: {
        'Accept': 'application/json',
        'Content-type': 'application/json',
      },
      body: JSON.stringify(body)
    };
  
    return fetch(route, request)
    .then(ret => {return ret.json()});
}


