{{!-- <h1>{{title}}</h1> --}}
<h1>Hi! {{username}}, your money: {{money}} <a href="/get/1/{{username}}" class="btn btn-info btn-xs" role="button">Refresh</a></h1>

<div id="soldout" class="alert alert-danger fade in" style="display: none;">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<strong>This item has been sold out!</strong> Buy failed!
</div>

{{# each products }}
  <div class="row">
    <div class="col-md-12">
      <div class="thumbnail">
        <div class="caption">
          <h3>{{ this.title }}</h3>
            <p class="seller">seller: {{{this.seller}}}</p>
            <p class="count">only {{{this.count}}} remain!</p>
            <p class="description">{{{this.description}}}</p>
            <div class="clearfix">
            <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }}</div>
              <a href="/add/{{ this.id }}" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
                
              <a href="/buy/{{this.seller}}/{{ this.id }}/{{this.price}}/{{this.count}}" class="btn btn-default pull-right" role="button" onclick=""><i class="fa fa-shopping-cart" aria-hidden="true"></i> Buy now!</a>
            </div>
        </div>
      </div>
    </div>
  </div>
{{/each}}

