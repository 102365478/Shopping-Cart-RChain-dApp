{{!-- <h1>{{title}}</h1> --}}
<h1>Hi! {{username}}, your money: {{money}} <a href="/get/1/{{username}}" class="btn btn-info btn-xs" role="button">Refresh</a></h1>

<div id="soldout" class="alert alert-danger fade in" style="display: none;">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	<strong>This item has been sold out!</strong> Buy failed!
</div>

<div class="row">
{{# each products }}
  
    
    <div class="col-md-3 ml-15">
      <div class="thumbnail row">
        <div class="caption col-md-7">
          <h3>{{ this.title }}</h3>
            <p class="seller">seller: {{{this.seller}}}</p>
            <p class="count">only {{{this.count}}} remain!</p>
            <p class="description">{{{this.description}}}</p>

            <div class="clearfix">
              <div class="price pull-left"><i class="fa fa-tag" aria-hidden="true"></i> {{ this.price }}</div>
            </div>
        </div>
        <img src="{{{this.url}}}" alt="" id="myimg" style="display: block; padding: 0; position: relative; top: 30px; right: 28px;" class="col-md-5"/>
        <div class="clearfix">
            <div class="btn-group pull-right" role="group" aria-label="">
                <a href="/add/{{ this.id }}" class="btn btn-secondary btn-default" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
                {{!-- <a href="" class="btn btn-secondary" role="button" style=""></a> --}}
                <a href="/buy/{{this.seller}}/{{ this.id }}/{{this.price}}/{{this.count}}/2" class="btn btn-secondary btn-default" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Buy now!</a>
            </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>


